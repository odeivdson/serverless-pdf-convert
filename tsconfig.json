{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@app/libreoffice": [
        "libs/libreoffice/src"
      ],
      "@app/libreoffice/*": [
        "libs/libreoffice/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}